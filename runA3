cd test-network
./network.sh down
./network.sh up createChannel -ca

cd addOrg3
./addOrg3.sh up -ca

cd ../
./network.sh deployCC -ccn auction -ccp ../auction3/chaincode-go/ -ccl go

cd ../auction3/application-javascript
npm i

node enrollAdmin.js org1
node enrollAdmin.js org2
node enrollAdmin.js org3

node registerEnrollUser.js org1 seller

node registerEnrollUser.js org1 bidder1
node registerEnrollUser.js org2 bidder2
node registerEnrollUser.js org2 bidder3
node registerEnrollUser.js org3 bidder4

# org3 will act as auditor
node createAuction.js org1 seller Auction3 items 100 withAuditor

OUTPUT=$(node bid.js org1 bidder1 Auction3 50 100)
echo $OUTPUT
# Get line contaiining SAVE THIS VALUE
SAVE_THIS_VALUE=$(echo "$OUTPUT" | grep "SAVE THIS VALUE")
# Get the value after : and trim whitespace
bidId1=$(echo "$SAVE_THIS_VALUE" | cut -d':' -f2 | xargs)
echo $bidId1
node submitBid.js org1 bidder1 Auction3 $bidId1

# Second Bidder: 50 price
OUTPUT=$(node bid.js org2 bidder2 Auction3 40 50)
echo $OUTPUT
# Get line contaiining SAVE THIS VALUE
SAVE_THIS_VALUE=$(echo "$OUTPUT" | grep "SAVE THIS VALUE")
# Get the value after : and trim whitespace
bidId2=$(echo "$SAVE_THIS_VALUE" | cut -d':' -f2 | xargs)
node submitBid.js org2 bidder2 Auction3 $bidId2

# Third Bidder: 100 price
OUTPUT=$(node bid.js org2 bidder3 Auction3 10 100)
echo $OUTPUT
# Get line contaiining SAVE THIS VALUE
SAVE_THIS_VALUE=$(echo "$OUTPUT" | grep "SAVE THIS VALUE")
# Get the value after : and trim whitespace
bidId3=$(echo "$SAVE_THIS_VALUE" | cut -d':' -f2 | xargs)
node submitBid.js org2 bidder3 Auction3 $bidId3

# Fourth Bidder: 50 price 50 quantity
OUTPUT=$(node bid.js org3 bidder4 Auction3 50 50)
echo $OUTPUT
# Get line contaiining SAVE THIS VALUE
SAVE_THIS_VALUE=$(echo "$OUTPUT" | grep "SAVE THIS VALUE")
# Get the value after : and trim whitespace
bidId4=$(echo "$SAVE_THIS_VALUE" | cut -d':' -f2 | xargs)
node submitBid.js org3 bidder4 Auction3 $bidId4

# Close Auction
node closeAuction.js org1 seller Auction3

# Revealing Stage
node revealBid.js org1 bidder1 Auction3 $bidId1
node revealBid.js org2 bidder2 Auction3 $bidId2
node revealBid.js org3 bidder4 Auction3 $bidId4

# Ending auction prematurely through auditor
node endAuctionwithAuditor.js org1 seller Auction3

# Clean Up
rm -rf wallet
cd ../../test-network/
./network.sh down
